<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Controls.StateDisplay">
    <Grid>
        <!-- Define two columns: Text on the left, Image on the right -->
        <Grid.ColumnDefinitions>
            <!-- Expands to take up remaining space -->
            <ColumnDefinition Width="*" />
            <!-- Shrinks to fit the content -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Text on the left -->
        <Label 
            x:Name="displayedText"
            Grid.Column="0"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Style="{StaticResource SubHeadline}" />

        <!-- Frame with Image on the right -->
        <Frame 
            Grid.Column="1"
            CornerRadius="5" 
            HeightRequest="60" 
            WidthRequest="60" 
            BackgroundColor="#66E44C" 
            Padding="10"
            VerticalOptions="Center"
            HorizontalOptions="End">
            <Image 
                Source="check.png" 
                HeightRequest="40" 
                WidthRequest="40" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </Frame>
    </Grid>
</ContentView>
